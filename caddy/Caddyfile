doughughes.net, www.doughughes.net {

	# Random Word
	handle /random-word* {
		forward_auth localhost:8000 {
			uri /verify
		}
		uri strip_prefix /random-word
		reverse_proxy localhost:8001
	}

	# Lottery Numbers
	handle /lottery* {
		uri strip_prefix /lottery
		reverse_proxy localhost:8002
	}

	# Home Inventory
	handle /inventory* {
		forward_auth localhost:8000 {
			uri /verify
		}
		uri strip_prefix /inventory
		reverse_proxy localhost:8003
	}

	# Auth service handles: /, /login, /logout, /account, /admin/*, /app-image/*
	handle {
		reverse_proxy localhost:8000
	}
}